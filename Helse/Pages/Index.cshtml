@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div ng-app="App" ng-cloak>
    <div ng-controller="appController" ng-class="{'waiting' : loadingStations}" ng-cloak>

        <div class="text-center">
            <h1>
                Velkommen til helsetjenestene
            </h1>
            <p>
                Velg et punkt på kartet for å finne helsestasjonene nær deg.
            </p>
        </div>

        <div class="container-map">
            <ng-map id="custom" on-click="click()" center="[59.91717182572497, 10.752182006835938]" default-style="false" zoom="10"></ng-map>
        </div>

        <div ng-if="loadingStations" class="text-center">
            <i class="fa fa-spinner fa-spin" aria-hidden="true"> </i>
            <span>
                Henter stasjoner
            </span>
        </div>

        <div ng-if="noStations">
            <p>
                Ingen stasjoner funnet.
            </p>
        </div>

        <table class="table table-bordered table-striped" ng-if="stations.length > 0" ng-cloak>
            <tr>
                <th class="col-xs-8">Navn</th>
                <th class="col-xs-4">Telefon</th>
            </tr>
            <tr ng-repeat="item in stations">
                <td>
                    {{item.Name}}
                </td>
                <td class="">
                    {{item.Phone}}
                </td>
            </tr>
        </table>
    </div>
</div>